{
  "name": "@u3/api",
  "version": "0.1.0",
  "description": "tRPC API package for U3-Stack - Interface layer for type-safe API routing",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
    "./routers/*": {
      "types": "./dist/routers/*.d.ts",
      "default": "./dist/routers/*.js"
    },
    "./middleware/*": {
      "types": "./dist/middleware/*.d.ts",
      "default": "./dist/middleware/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "dev": "tsc --build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "clean": "rm -rf dist .turbo node_modules tsconfig.tsbuildinfo",
    "validate": "pnpm typecheck && pnpm lint && pnpm format"
  },
  "dependencies": {
    "@trpc/server": "^10.45.2",
    "zod": "^3.23.8",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.16.5",
    "typescript": "~5.8.3"
  }
}
