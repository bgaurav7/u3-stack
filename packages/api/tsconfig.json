{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "~/routers/*": ["./routers/*"],
      "~/middleware/*": ["./middleware/*"],
      "~/server": ["./server"],
      "@u3/api": ["./index"],
      "@u3/api/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../features" },
    { "path": "../types" },
    { "path": "../config" }
  ]
}