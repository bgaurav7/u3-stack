{
  "name": "@u3/config",
  "version": "0.1.0",
  "description": "Shared configuration for U3-Stack monorepo",
  "main": "index.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./typescript": {
      "types": "./tsconfig.d.ts",
      "default": "./tsconfig.base.json"
    }
  },
  "files": ["*.js", "*.d.ts", "*.json"],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format ."
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "~5.8.3"
  }
}
