{
  "name": "@u3/config",
  "version": "0.1.0",
  "description": "Shared configuration for U3-Stack monorepo",
  "types": "./src",
  "main": "src/index.ts",
  "files": [
    "types",
    "dist"
  ],
  "scripts": {
    "build": "tamagui-build --skip-types",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "clean": "rm -rf dist .turbo node_modules",
    "validate": "pnpm typecheck && pnpm lint && pnpm format:check"
  },
  "dependencies": {
    "@tamagui/animations-react-native": "^1.132.12",
    "@tamagui/colors": "^1.132.12",
    "@tamagui/config": "^1.132.12",
    "@tamagui/font-inter": "^1.132.12",
    "@tamagui/shorthands": "^1.132.12",
    "@tamagui/theme-builder": "^1.132.12",
    "@tamagui/themes": "^1.132.12",
    "@tamagui/web": "^1.132.12",
    "react-native": "0.79.2",
    "tamagui": "^1.132.12",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@tamagui/build": "^1.132.12",
    "@types/node": "^22.16.5",
    "typescript": "~5.8.3"
  }
}
