{
  "name": "@u3/config",
  "version": "0.1.0",
  "description": "Shared configuration for U3-Stack monorepo",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format .",
    "format:fix": "biome format --write .",
    "clean": "rm -rf dist .turbo node_modules",
    "validate": "pnpm typecheck && pnpm lint && pnpm format"
  },
  "dependencies": {
    "dotenv-flow": "^4.1.0",
    "env-var": "^7.5.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.16.5",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3"
  }
}
