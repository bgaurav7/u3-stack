{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "CI"],
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"],
      "outputMode": "hash-only"
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "*.ts", "*.tsx", "*.js", "*.jsx", "biome.json"],
      "outputs": [],
      "outputMode": "errors-only"
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "*.ts", "*.tsx", "*.js", "*.jsx", "biome.json"],
      "outputs": [],
      "cache": false
    },
    "format": {
      "inputs": [
        "src/**",
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx",
        "*.json",
        "biome.json"
      ],
      "outputs": [],
      "cache": false
    },
    "format:check": {
      "inputs": [
        "src/**",
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx",
        "*.json",
        "biome.json"
      ],
      "outputs": [],
      "outputMode": "errors-only"
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "*.ts", "*.tsx", "tsconfig.json"],
      "outputs": [],
      "outputMode": "errors-only"
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "test/**", "*.test.*", "*.spec.*"],
      "outputs": ["coverage/**"],
      "outputMode": "errors-only"
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
