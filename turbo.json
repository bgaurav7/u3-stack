{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "CI", "ANDROID_HOME", "JAVA_HOME", "PATH"],
  "globalDependencies": ["**/.env.*local", "**/.env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "typecheck", "lint", "format:check"],
      "inputs": [
        "src/**",
        "**/*.{ts,tsx,js,jsx}",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": ["dist/**", "build/**", ".next/**", ".expo/**", "!**/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "build:android": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "**/*.{ts,tsx,js,jsx}",
        "package.json",
        "app.json",
        "metro.config.js"
      ],
      "outputs": [".expo/**", "android/**"]
    },
    "build:ios": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "**/*.{ts,tsx,js,jsx}",
        "package.json",
        "app.json",
        "metro.config.js"
      ],
      "outputs": [".expo/**", "ios/**"]
    },
    "lint": {
      "dependsOn": [],
      "inputs": ["src/**", "**/*.{ts,tsx,js,jsx}", "biome.json"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": [],
      "inputs": ["src/**", "**/*.{ts,tsx,js,jsx}", "biome.json"],
      "outputs": [],
      "cache": false
    },
    "format": {
      "inputs": ["src/**", "**/*.{ts,tsx,js,jsx,json}", "biome.json"],
      "outputs": [],
      "cache": false,
      "dependsOn": []
    },
    "format:check": {
      "inputs": ["src/**", "**/*.{ts,tsx,js,jsx,json}", "biome.json"],
      "outputs": [],
      "dependsOn": []
    },
    "typecheck": {
      "dependsOn": [],
      "inputs": ["src/**", "**/*.{ts,tsx}", "tsconfig.json"],
      "outputs": [".turbo/typecheck.cache"]
    },
    "test": {
      "dependsOn": [],
      "inputs": ["src/**", "test/**", "**/*.{test,spec}.{ts,tsx,js}"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false,
      "dependsOn": []
    }
  }
}
