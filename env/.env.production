# Production environment overrides
# These values override defaults in production

NODE_ENV=production

# Production Server (will be overridden by deployment platform)
PORT=8080

# Production Database (will be set via secrets)
# DATABASE_URL=postgresql://production-host/u3stack_prod

# Production API (will be set based on deployment)
# API_URL=https://api.u3stack.com

# Production Logging (less verbose)
LOG_LEVEL=warn

# Production Features
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# Production-specific
HOT_RELOAD=false
ENABLE_DEVTOOLS=false

# Security
SECURE_COOKIES=true
TRUST_PROXY=true