{
  "name": "u3-stack",
  "version": "0.1.0",
  "private": true,
  "description": "Universal Stack - A modern, type-safe, scalable monorepo stack for Android, iOS, and Web applications",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:mobile": "pnpm --filter=@u3/mobile start",
    "build": "turbo run build",
    "build:android": "turbo run build:android --filter=@u3/mobile",
    "build:ios": "turbo run build:ios --filter=@u3/mobile",
    "build:fast": "turbo run build --filter=!typecheck --filter=!lint --filter=!format",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:fix": "turbo run format:fix",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean",
    "clean:install": "pnpm run clean && pnpm install",
    "validate": "turbo run typecheck lint format",
    "prepare": "husky",
    "postinstall": "pnpm run prepare"
  },
  "dependencies": {
    "caniuse-lite": "^1.0.30001727",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tamagui": "^1.132.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@swc/helpers": "^0.5.17",
    "@types/react": "~19.0.0",
    "@types/react-dom": "^19.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^2.5.5",
    "typescript": "~5.8.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.13.1",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "pnpm": {
    "overrides": {
      "react": "19.0.0",
      "react-dom": "19.0.0",
      "react-native-renderer": "19.0.0",
      "@types/react": "~19.0.0",
      "@types/react-dom": "^19.0.0",
      "tamagui": "^1.132.12",
      "@tamagui/*": "^1.132.12",
      "typescript": "~5.8.3"
    }
  }
}
